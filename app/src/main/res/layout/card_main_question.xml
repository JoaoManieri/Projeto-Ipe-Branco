<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#99000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/discussionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Como?"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/upVote"
            android:layout_width="18dp"
            android:layout_height="18dp"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discussionTitle"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/neutral_positive" />

        <ImageView
            android:id="@+id/gearImageeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="@+id/upVote"
            app:layout_constraintStart_toStartOf="@+id/upVote"
            app:layout_constraintTop_toBottomOf="@+id/upVote"
            app:srcCompat="@drawable/gear_ico" />

        <ImageView
            android:id="@+id/downVote"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/gearImageeView"
            app:layout_constraintStart_toStartOf="@+id/gearImageeView"
            app:layout_constraintTop_toBottomOf="@+id/gearImageeView"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/neutral_negative" />

        <TextView
            android:id="@+id/bodyContenttext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:text="Lorem ipsum dolor sit amet. Est sequi tenetur hic dolores placeat rem nobis laudantium et ipsum tenetur ad voluptatem debitis est incidunt consequuntur eum eveniet repudiandae! Qui explicabo necessitatibus ex tempore mollitia quo quis quae et numquam perferendis qui ullam veritatis eos excepturi harum.  Qui autem similique eos dolor sapiente a neque temporibus eum sint delectus qui nobis fugiat et accusantium sint 33 sapiente rerum. Ea perferendis velit ab accusamus consequatur eos quibusdam voluptates est neque enim eum rerum quos qui reprehenderit nihil et consequatur odio. Ut tenetur illum et blanditiis sunt At voluptatum Quis ex impedit fuga id quia molestias. Qui unde repellat sit laborum tempora qui blanditiis ratione est repudiandae atque rem sunt odio.  In velit reprehenderit est tempora atque est praesentium culpa et impedit amet est sint sunt est nobis laborum. Aut deleniti blanditiis vel eveniet dolores aut debitis consequatur ut cumque voluptatibus et corporis officia et iusto omnis."
            android:typeface="sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/gearImageeView"
            app:layout_constraintTop_toBottomOf="@+id/discussionTitle"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/userNameSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="jvmanieri"
            android:textSize="8dp"
            android:typeface="sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bodyContenttext"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/gearImageeView"
            app:layout_constraintTop_toBottomOf="@+id/bodyContenttext"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>